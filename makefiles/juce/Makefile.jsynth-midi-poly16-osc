################################################################################
#
#			FaustWeb Makefile for JUCE
#
################################################################################

faustfile	?= $(wildcard *.dsp)

binary.zip : $(faustfile)
	faust2juce -jsynth -midi -nvoices 16 -osc $(faustfile)
	zip -r binary.zip $(faustfile:.dsp=)

src.cpp : $(faustfile)
	faust -i -a juce-plugin.cpp $(faustfile) -o src.cpp
